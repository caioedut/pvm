{
  "name": "pvm",
  "version": "0.1.2",
  "description": "PHP Version Manager for Windows",
  "main": "cli.js",
  "bin": "./cli.js",
  "license": "MIT",
  "author": "CaioEduT",
  "repository": "https://github.com/caioedut/pvm",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "node compiler/build.js",
    "setup": "node compiler/setup.js",
    "choco": "node compiler/choco.js",
    "deploy": "yarn build && yarn setup && yarn choco"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.1"
  },
  "devDependencies": {
    "dotenv": "^16.0.0",
    "prettier": "^2.6.2"
  },
  "pkg": {
    "scripts": [
      "cli.js",
      "src/**/*.js"
    ],
    "targets": [
      "node14-win-x64"
    ]
  }
}
